# ===========================================
# DEADLINE API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Django Configuration
# ---------------------
# CRITICAL: Use a strong random secret key in production
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-5s4zka&zl7^8+#l7f2&#vx$xwyq1wo&q6kdt!t7j%l(@f*c6#s

# Development: True, Production: False
DEBUG=True

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1,deadline-api.railway.app

# Database Configuration
# -----------------------
# Development: SQLite (default, DATABASE_URL not set)
# Production: PostgreSQL (Railway auto-provides DATABASE_URL)
# Manual PostgreSQL: DATABASE_URL=postgresql://user:password@host:5432/deadline_db

# Firebase Admin SDK
# -------------------
# Option 1: Point to service account JSON file (recommended for local development)
# FIREBASE_CREDENTIALS_FILE=/absolute/path/to/your-firebase-adminsdk.json

# Option 2: Individual credentials via environment variables (recommended for production/Railway)
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com

# CORS Configuration
# -------------------
# Comma-separated list of allowed origins (frontend URLs)
# Add your production Vercel URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://deadline.omerakben.com

# Security Settings (Production Only)
# ------------------------------------
# Uncomment and set to True when deploying to production (Railway)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Demo Mode Notes
# ----------------
# The demo account (demo@deadline.demo) should be created in Firebase Console
# Demo data seeding: python manage.py seed_demo_data
# For production: Add daily cron job to reset demo data

# Optional: Error Tracking
# -------------------------
# SENTRY_DSN=your_sentry_dsn_here

